@{
    ViewData["Active"] = "Item";
}
<div class="row justify-content-center">
    <div class="col-12 col-md-12">
        <form method="post" asp-action="Store">
            <h5>Enroll New Item Code</h5>

            <div class="form-group">
                <label class="">Item Code</label>
                <input autofocus class="form-control form-control-lg" />
            </div>

            <div class="form-group">
                <label>Item Name</label>
                <input class="form-control form-control-lg" />
            </div>

            <div class="form-group">
                <label>Item Description</label>
                <input class="form-control form-control-lg" />
            </div>

            <div>
                <button type="submit" class="btn btn-primary btn-lg w-50">Save</button>
            </div>
        </form>
    </div>
</div>

<style>
    form label {
        font-weight: 600;
        margin-left: .5rem;
        color: #333;
    }
</style>